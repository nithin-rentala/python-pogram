# project tresure map


row1 = ["□","□","□"]
row2 = ["□","□","□"]
row3 = ["□","□","□"]
map = [row1,row2,row3]
print(f"{row1}\n{row2}\n{row3}\n")
position = input("where do you want to put the treaure")

horizantal  = int(position[0])
vertical = int(position[1])

# selected_row = map[vertical-1]
# selected_row[horizantal-1] = "X"

map[vertical-1][horizantal-1] = "X"

map = [row1,row2,row3]
print(f"{row1}\n{row2}\n{row3}\n")
